TELEGRAM_TOKEN=
# Path to the SQLite database file (defaults to crypto.db)
DB_PATH=crypto.db
# Optional CoinGecko API key
COINGECKO_API_KEY=
# Optional base URL for the CoinGecko API
COINGECKO_BASE_URL=
# Log verbosity level (INFO, DEBUG, etc.)
LOG_LEVEL=INFO
# File path for log output (default bot.log; recreated if deleted)
LOG_FILE=bot.log
# Default percent change that triggers an alert
DEFAULT_THRESHOLD=0.1
# Percent change in 24h volume that triggers an alert
VOLUME_THRESHOLD=
# Default subscription interval when none is specified
DEFAULT_INTERVAL=5m
# How often prices are checked
PRICE_CHECK_INTERVAL=30s
# How long cached chart data remains valid
CHART_CACHE_TTL=1h
# Delete chart image on reload (true/false)
DELETE_CHART_ON_RELOAD=true
# Enable price milestone alerts (true/false)
ENABLE_MILESTONE_ALERTS=true
# Enable volume alerts (true/false)
ENABLE_VOLUME_ALERTS=true
# Default currency used when fetching prices
DEFAULT_VS_CURRENCY=usd
